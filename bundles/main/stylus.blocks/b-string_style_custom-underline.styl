.b-string {
	&_style_custom-underline {
		text-decoration:none;

		color--u = #f00;

		background-image:linear-gradient(color--u, color--u 1px, transparent 1px, transparent 0.149em, transparent 100%);
		background-repeat:repeat-x;
		background-position:0 100%;
		background-size:1px 0.149em;

		.b-test_font-size_32 &,
		.b-test_font-size_24 & {
			background-image: -webkit-linear-gradient(#ff0000 2px, transparent 2px);
			background-image: -moz-linear-gradient(#ff0000 2px, transparent 2px);
			background-image: linear-gradient(#ff0000 2px, transparent 2px);
		}
		.b-test_font-size_32 & {
			-webkit-background-size : 1px 4px;
			-moz-background-size : 1px 4px;
			background-size : 1px 4px;
		}

		.b-test-group_font-family_verdana .b-test_font-size_24 &,
		.b-test-group_font-family_verdana .b-test_font-size_32 & {
			background-image: -webkit-linear-gradient(transparent, transparent 1px, #ff0000 1px, #ff0000 3px, transparent 3px);
			background-image: -moz-linear-gradient(transparent, transparent 1px, #ff0000 1px, #ff0000 3px, transparent 3px);
			background-image: linear-gradient(transparent, transparent 1px, #ff0000 1px, #ff0000 3px, transparent 3px);
		}
		.b-test-group_font-family_verdana .b-test_font-size_24 & {
			-webkit-background-size:1px 4px;
			-moz-background-size:1px 4px;
			background-size:1px 4px;
		}
	}
}
